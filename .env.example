# Kite API Configuration
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=your_access_token_here

# LLM Configuration
LLM_PROVIDER=openai  # openai, anthropic, or local
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-4  # or gpt-3.5-turbo, claude-3-opus, etc.

# Trading Configuration
TRADING_MODE=backtest  # backtest, paper, or live
INITIAL_CAPITAL=100000  # in INR
WATCHLIST=RELIANCE,TCS,INFY,HDFCBANK  # comma-separated symbols (static)

# Dynamic Watchlist (optional - overrides static WATCHLIST if enabled)
USE_DYNAMIC_WATCHLIST=false  # true to enable news-based watchlist
DYNAMIC_WATCHLIST_MAX_STOCKS=10  # Maximum stocks in dynamic watchlist
DYNAMIC_WATCHLIST_MIN_CONFIDENCE=0.6  # Minimum confidence threshold (0.0-1.0)
DYNAMIC_WATCHLIST_SECTOR_FILTER=  # Optional: Technology,Banking,Pharma (comma-separated)
DYNAMIC_WATCHLIST_MAX_RISK=MEDIUM  # Maximum risk level: LOW, MEDIUM, HIGH
DYNAMIC_WATCHLIST_DIRECTION_FILTER=  # Optional: UP, DOWN, VOLATILE (leave empty for all)
NEWS_REFRESH_INTERVAL=60  # Minutes between news refresh (for dynamic watchlist)

# Telegram Notifications
TELEGRAM_ENABLED=false  # true to enable Telegram notifications
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Get from @BotFather
TELEGRAM_CHAT_ID=your_chat_id_here  # Your chat/channel ID
TELEGRAM_NOTIFY_TRADES=true  # Notify on every trade entry/exit
TELEGRAM_NOTIFY_RISK_ALERTS=true  # Notify on risk alerts
TELEGRAM_DAILY_SUMMARY=true  # Send end-of-day summary

# Global Market Analysis (Pre-market)
ENABLE_GLOBAL_MARKET_ANALYSIS=true  # Analyze US/Asian markets before trading
GLOBAL_MARKET_ANALYSIS_TIME=08:30  # IST time to run analysis (before market open)
ADJUST_STRATEGY_FROM_GLOBAL=true  # Adjust position sizes based on global trends
GLOBAL_MARKET_MIN_CONFIDENCE=0.6  # Minimum confidence for adjustments

# Risk Management
MAX_RISK_PER_TRADE=0.02  # 2% of capital
MAX_DAILY_LOSS=0.03  # 3% of capital
MAX_LOSING_TRADES_PER_DAY=3
MIN_MINUTES_AFTER_OPEN=15  # No trades in first 15 minutes
CUTOFF_TIME=14:45  # IST, no new positions after this time

# Strategy Configuration
ENABLED_STRATEGIES=orb_supertrend,ema_trend  # comma-separated
ORB_PERIOD_MINUTES=15
ORB_VOLUME_MULTIPLIER=1.5
ORB_RSI_THRESHOLD=55
EMA_FAST=9
EMA_SLOW=21
SUPERTREND_PERIOD=7
SUPERTREND_MULTIPLIER=3
RSI_PERIOD=14
ATR_PERIOD=14

# Data Configuration
DATA_STORAGE=sqlite  # csv or sqlite
DATA_INTERVAL=5minute  # 1minute, 5minute, 15minute
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31

# News Configuration
NEWS_ENABLED=true  # Enable news fetching
NEWS_SOURCES=economic_times,google_news  # Comma-separated: economic_times, google_news, nse_announcements
NEWS_CACHE_DIR=data/news_cache  # News cache directory
NEWS_CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)
NEWS_MAX_AGE_HOURS=24  # Only fetch news from last 24 hours
NEWS_FETCH_INTERVAL=60  # Minutes between news refresh
NEWS_MAX_ARTICLES_PER_SOURCE=50  # Maximum articles per source

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/trading.log
